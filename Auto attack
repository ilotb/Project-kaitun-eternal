local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local rootPart = character:WaitForChild("HumanoidRootPart")
local debrisMonsters = workspace.Debris.Monsters

while wait(0.1) do
    local closestMonster = nil
    local shortestDistance = math.huge

    for i, v in pairs(debrisMonsters:GetChildren()) do
        if v:FindFirstChild("HumanoidRootPart") and v:GetAttribute("Health") ~= "100" then
            local distance = (rootPart.Position - v.HumanoidRootPart.Position).Magnitude
            if distance < 1000 and distance < shortestDistance then
                closestMonster = v
                shortestDistance = distance
            end
        end
    end

    if closestMonster then
        for i = 1, 5 do
        local args = {
            {
                Id = closestMonster.Name,
                Action = "_Mouse_Click"
            }
        }
        game:GetService("ReplicatedStorage"):WaitForChild("Events"):WaitForChild("To_Server"):FireServer(unpack(args))
    end end
end
